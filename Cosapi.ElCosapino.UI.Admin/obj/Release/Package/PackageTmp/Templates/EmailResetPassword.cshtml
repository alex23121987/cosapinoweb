@inherits System.Web.Mvc.WebViewPage
@{
    Layout = Cosapi.ElCosapino.UI.Admin.Helpers.ConstantHelpers.Layout.MODAL_EMAIL_PATH;
    dynamic model = ((dynamic)Model);
}

<table border='0' cellpadding='0' cellspacing='0' width='100%'>
    <tr>
        <td align='center' valign='top'>
            <h2>Actualizar Contraseña</h2>
        </td>
    </tr>
    <tr>
        <td align='center' valign='top'>
            <h4 style='color: #20a8d8 !important'>Proceso de cambio de contraseña</h4>
        </td>
    </tr>

    <tr>
        <td align='center' valign='top'>
            <p style='margin: 1em 0; text-align: justify;'>

                Estimad(a) @model.Usuario.Nombres,<br />
                <br />
                Hemos recibido su solicitud de reinicio de contraseña: @model.Usuario.Password<b></b><br />
                <br />
                Saludos,<br />
                COSAPI.
            </p>
        </td>
    </tr>
</table>
