@using Cosapi.ElCosapino.CrossCutting.Util

@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .divCorto {        
        height: 43px;
        overflow: hidden;
        text-overflow: ellipsis;
    }
</style>

<div class="choose-area pt-60" style="background-color:#939393">
    <div class="container-cosapino">
        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="headline">
                    <h2>NOTICIAS</h2>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="choose-area pt-30">
    <div class="container-cosapino">
        <div class="row">
            <div class="col-md-9 col-sm-9">
                <div id="page-wrapper">
                    <div class="row">
                        @foreach (var item in Model.Noticias_SeccionNoticias)
                        {
                            <div class="col-lg-6 col-md-6">
                                <div class="panel panel-primary" style="border: none;">
                                    <div class="panel-heading" style="padding-top:0px !important; padding-bottom:0px !important">
                                        <div class="row">
                                            <img style="width: 406px;height: 220px;" src="@ViewBag.UrlAdmin/Upload/Noticias/ListaNoticias/@item.Imagen" alt="Cosapi">
                                        </div>
                                    </div>
                                    <div class="panel-footer" style="padding:0px !important;height:46px;border-top: none !important; background-color:#009ED3">
                                        <span style="width: 58px;height: 0px;border-right: 16px solid transparent;border-top: 46px solid #939393;position: absolute;"></span>
                                        <span class="pull-left" style="position:absolute;color:#FFFFFF;width: 43px;text-align: center;padding-top: 3px;">@item.Dia<br />@item.Mes</span>
                                        <span class="pull-right" style="color:#FFFFFF;padding-left: 60px;overflow-y: hidden;">@item.Titulo</span>
                                        <div class="clearfix"></div>
                                    </div>
                                </div>
                                <div style="padding-bottom: 15px;">
                                    <div class="divCorto">
                                        @Html.Raw(item.SubTitulo)
                                    </div>
                                    <div>
                                        <span class="pull-right" style="color:#FFFFFF;padding-left: 60px;overflow-y: hidden;"><a href="~/NoticiasDetalle?IDNoticia=@item.IDInterfaceWeb" class="btn btn-primary">Ver más</a></span>
                                        <div class="clearfix"></div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-sm-3" style="border-left: 1px solid #CCCCCC;">
                <div class="choose-left">
                    <div class="bg-choose"></div>
                    <div class="choose-item">
                        <ul>
                            <li>
                                <div class="choose-text">
                                    <h4 style="background-color: #009ED3;color: #FFFFFF;text-align: center;padding: 8px;">Archivos</h4>
                                    @foreach (var item in Model.Noticias_Trimestre)
    {
                                <p><a href="~/Noticias?i=@item.FiltroNoticia_Desde&f=@item.FiltroNoticia_Hasta">@item.FiltroNoticia_Descripcion</a></p>
}
                                </div>
                            </li>                            
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>